{% extends 'base.html.twig' %}

{% block title %}Subscribers list{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        <table>
            <tr>
                <td>
                    <a href="?sort=date&sortorder={% if sort=='date' and sortorder=='asc' %}desc{% else %}asc{% endif %}">Date</a>
                </td>
                <td>
                    <a href="?sort=name&sortorder={% if sort=='name' and sortorder=='asc' %}desc{% else %}asc{% endif %}">Name</a>
                </td>
                <td>
                    <a href="?sort=email&sortorder={% if sort=='email' and sortorder=='asc' %}desc{% else %}asc{% endif %}">E-mail</a>
                </td>
                <td>
                    Category
                </td>
            </tr>

            {% for subscriber in subscribers %}
                <tr>
                    <td>{{ subscriber.created|date('Y-m-d H:i:s') }}</td>
                    <td>{{ subscriber.name }}</td>
                    <td>{{ subscriber.email }}</td>
                    <td>{{ subscriber.category }}</td>
                    <td><a href="/admin/subscription/edit/{{ subscriber.email }}">edit</a></td>
                    <td><a href="/admin/subscription/delete/{{ subscriber.email }}">delete</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
