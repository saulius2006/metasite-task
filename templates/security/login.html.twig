{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="page-wrapper">

    {% if error %}
        <span class="error">{{ error.messageKey }}</span>
    {% endif %}
    <form action="{{ path('login') }}" method="POST" class="login-form">

        <input type="text" name="_username" value="{{ last_username }}" placeholder="Username">
        <input type="password" name="_password" placeholder="Password">
        <button  type="submit">Login</button>
    </form>
</div>
{% endblock %}
